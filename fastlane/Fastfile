platform :ios do
  lane :beta do
    setup_ci
    match(git_basic_authorization: ENV['MATCH_GIT_BASIC_AUTHORIZATION'], readonly: true, type: 'appstore')
    api_key = app_store_connect_api_key(key_id: "Z66W7W2MY5", issuer_id: "1bef1256-dc89-42c1-b42a-8824f93441f9", key_content: ENV["APP_STORE_CONNECT_API_KEY_KEY"])
    build_app
    upload_to_testflight(api_key: api_key)
  end
end
